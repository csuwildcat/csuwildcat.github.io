---
import { ClientRouter } from "astro:transitions";
import { SITE } from "@/config";
import ImageZoom from "@/components/ImageZoom.astro";
import "@/styles/global.css";

const googleSiteVerification = import.meta.env.PUBLIC_GOOGLE_SITE_VERIFICATION;

export interface Props {
  title?: string;
  author?: string;
  profile?: string;
  description?: string;
  ogImage?: string;
  canonicalURL?: string;
  ogType?: "website" | "article";
  ogImageAlt?: string;
  articleTags?: string[];
  twitterCard?: "summary" | "summary_large_image" | "app" | "player";
  twitterSite?: string;
  twitterCreator?: string;
  pubDatetime?: Date;
  modDatetime?: Date | null;
  scrollSmooth?: boolean;
}

const {
  title = SITE.title,
  author = SITE.author,
  profile = SITE.profile,
  description = SITE.desc,
  ogImage = SITE.ogImage ? `/${SITE.ogImage}` : "/og.png",
  canonicalURL = new URL(Astro.url.pathname, Astro.url).toString(),
  ogType,
  ogImageAlt,
  articleTags = [],
  twitterCard = "summary_large_image",
  twitterSite = SITE.twitterHandle,
  twitterCreator = SITE.twitterHandle,
  pubDatetime,
  modDatetime,
  scrollSmooth = false,
} = Astro.props;

const resolvedCanonicalURL = new URL(canonicalURL, Astro.url).toString();
const socialImageURL = new URL(ogImage, Astro.url).toString();
const resolvedOgType = ogType ?? (pubDatetime ? "article" : "website");
const resolvedOgImageAlt = ogImageAlt ?? `Social preview image for ${title}`;
const ogLocale = SITE.lang?.includes("-")
  ? SITE.lang.replace("-", "_")
  : SITE.lang === "en"
    ? "en_US"
    : (SITE.lang ?? "en_US");

const ogImageMimeType = (() => {
  const pathname = new URL(socialImageURL).pathname.toLowerCase();
  if (pathname.endsWith(".png")) return "image/png";
  if (pathname.endsWith(".jpg") || pathname.endsWith(".jpeg")) return "image/jpeg";
  if (pathname.endsWith(".webp")) return "image/webp";
  if (pathname.endsWith(".gif")) return "image/gif";
  return undefined;
})();

const structuredData = {
  "@context": "https://schema.org",
  "@type": resolvedOgType === "article" ? "BlogPosting" : "WebPage",
  headline: `${title}`,
  image: `${socialImageURL}`,
  datePublished: `${pubDatetime?.toISOString()}`,
  ...(modDatetime && { dateModified: modDatetime.toISOString() }),
  author: [
    {
      "@type": "Person",
      name: `${author}`,
      ...(profile && { url: profile }),
    },
  ],
};
---

<!doctype html>
<html lang=`${SITE.lang ?? "en"}` class={`${scrollSmooth && "scroll-smooth"}`}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="canonical" href={resolvedCanonicalURL} />
    <meta name="generator" content={Astro.generator} />

    <!-- General Meta Tags -->
    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={description} />
    <meta name="author" content={author} />
    <link rel="sitemap" href="/sitemap-index.xml" />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content={resolvedOgType} />
    <meta property="og:site_name" content={SITE.title} />
    <meta property="og:locale" content={ogLocale} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={resolvedCanonicalURL} />
    <meta property="og:image" content={socialImageURL} />
    <meta property="og:image:secure_url" content={socialImageURL} />
    <meta property="og:image:alt" content={resolvedOgImageAlt} />
    {ogImageMimeType && <meta property="og:image:type" content={ogImageMimeType} />}

    <!-- Article Published/Modified time -->
    {
      resolvedOgType === "article" &&
      pubDatetime && (
        <meta
          property="article:published_time"
          content={pubDatetime.toISOString()}
        />
      )
    }
    {
      resolvedOgType === "article" &&
      modDatetime && (
        <meta
          property="article:modified_time"
          content={modDatetime.toISOString()}
        />
      )
    }
    {resolvedOgType === "article" && <meta property="article:author" content={author} />}
    {
      resolvedOgType === "article" &&
      articleTags.map(tag => <meta property="article:tag" content={tag} />)
    }

    <!-- Twitter -->
    <meta name="twitter:card" content={twitterCard} />
    <meta name="twitter:url" content={resolvedCanonicalURL} />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={socialImageURL} />
    <meta name="twitter:image:alt" content={resolvedOgImageAlt} />
    {twitterSite && <meta name="twitter:site" content={twitterSite} />}
    {twitterCreator && <meta name="twitter:creator" content={twitterCreator} />}

    <!-- Google JSON-LD Structured data -->
    <script
      type="application/ld+json"
      is:inline
      set:html={JSON.stringify(structuredData)}
    />

    <!-- Enable RSS feed auto-discovery  -->
    <!-- https://docs.astro.build/en/recipes/rss/#enabling-rss-feed-auto-discovery -->
    <link
      rel="alternate"
      type="application/rss+xml"
      title={SITE.title}
      href={new URL("rss.xml", Astro.site)}
    />

    <meta name="theme-color" content="" />

    {
      // If PUBLIC_GOOGLE_SITE_VERIFICATION is set in the environment variable,
      // include google-site-verification tag in the heading
      // Learn more: https://support.google.com/webmasters/answer/9008080#meta_tag_verification&zippy=%2Chtml-tag
      googleSiteVerification && (
        <meta
          name="google-site-verification"
          content={googleSiteVerification}
        />
      )
    }

    <ClientRouter />

    <script is:inline src="/toggle-theme.js"></script>
  </head>
  <body>
    <slot />
    <ImageZoom />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
